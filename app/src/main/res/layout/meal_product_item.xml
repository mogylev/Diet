<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin">

    <TextView
        android:id="@+id/productName"
        style="@style/textSubtitle2"
        android:layout_width="0dp"
        android:layout_marginRight="@dimen/margin"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/productInfoContainer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Омлет" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/productInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/productName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/productKkal"
            style="@style/textSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="эн.цен: 184 ккал" />

        <TextView
            android:id="@+id/productProtein"
            style="@style/textSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="белки: 15 г" />

        <TextView
            android:id="@+id/productFats"
            style="@style/textSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="жиры: 18 г" />

        <TextView
            android:id="@+id/productCarbo"
            style="@style/textSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="угл: 1.9 г" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>